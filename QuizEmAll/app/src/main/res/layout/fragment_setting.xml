<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.SettingFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="vertical">

            <RelativeLayout
                android:id="@+id/rl_sound_effects"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1">

                <TextView
                    android:layout_margin="10dp"
                    android:textSize="18sp"
                    android:layout_centerVertical="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Sound Effects" />

                <Switch
                    android:layout_margin="10dp"
                    android:layout_centerVertical="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1">

                <TextView
                    android:textSize="18sp"
                    android:layout_margin="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="Music" />

                <Switch
                    android:layout_margin="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:checked="true"
                    android:layout_alignParentRight="true" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="2">

                <TextView
                    android:id="@+id/tv_generations_in_quiz"
                    android:textSize="30sp"
                    android:layout_width="wrap_content"
                    android:textColor="@color/black"

                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:text="generations in quiz"
                    android:textAllCaps="true" />
            </RelativeLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="2"
                android:orientation="horizontal">

                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_margin="10dp"
                    android:layout_height="match_parent">
                    <CheckBox
                        android:id="@+id/cb_gen_1"
                        android:checked="true"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:button="@null"/>
                    <ImageView
                        android:id="@+id/iv_gen_1"
                        android:src="@drawable/background_gen1"
                        android:layout_width="wrap_content"
                        android:scaleType="fitXY"
                        android:layout_height="wrap_content" />
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_margin="10dp"
                    android:layout_height="match_parent">
                    <CheckBox
                        android:id="@+id/cb_gen_2"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:button="@null"/>
                    <ImageView
                        android:id="@+id/iv_gen_2"
                        android:src="@drawable/background_gen2"
                        android:layout_width="wrap_content"
                        android:scaleType="fitXY"
                        android:layout_height="wrap_content" />
                </RelativeLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="2"
                android:orientation="horizontal">


                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_margin="10dp"
                    android:layout_height="match_parent">
                    <CheckBox
                        android:id="@+id/cb_gen_3"
                        android:layout_width="match_parent"
                        android:button="@null"
                        android:layout_height="match_parent" />
                    <ImageView
                        android:id="@+id/iv_gen_3"
                        android:src="@drawable/background_gen3"
                        android:layout_width="wrap_content"
                        android:scaleType="fitXY"
                        android:layout_height="wrap_content" />
                </RelativeLayout>


                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_margin="10dp"
                    android:layout_height="match_parent">
                    <CheckBox
                        android:id="@+id/cb_gen_4"
                        android:layout_width="match_parent"
                        android:button="@null"
                        android:layout_height="match_parent" />
                    <ImageView
                        android:id="@+id/iv_gen_4"
                        android:src="@drawable/background_gen4"
                        android:layout_width="wrap_content"
                        android:scaleType="fitXY"
                        android:layout_height="wrap_content" />
                </RelativeLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="2"
                android:orientation="horizontal">


                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_margin="10dp"
                    android:layout_height="match_parent">
                    <CheckBox
                        android:id="@+id/cb_gen_5"
                        android:layout_width="match_parent"
                        android:button="@null"
                        android:layout_height="match_parent" />
                    <ImageView
                        android:id="@+id/iv_gen_5"
                        android:src="@drawable/background_gen5"
                        android:layout_width="wrap_content"
                        android:scaleType="fitXY"
                        android:layout_height="wrap_content" />
                </RelativeLayout>


                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_margin="10dp"
                    android:layout_height="match_parent">
                    <CheckBox
                        android:id="@+id/cb_gen_6"
                        android:layout_width="match_parent"
                        android:button="@null"
                        android:layout_height="match_parent" />
                    <ImageView
                        android:id="@+id/iv_gen_6"
                        android:src="@drawable/background_gen6"
                        android:layout_width="wrap_content"
                        android:scaleType="fitXY"
                        android:layout_height="wrap_content" />
                </RelativeLayout>
            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"/>

        </LinearLayout>
    </LinearLayout>
</FrameLayout>
